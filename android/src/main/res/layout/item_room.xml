<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:theme="@style/ItemRoomStyle"
    android:layout_height="match_parent">

    <TextView
        android:background="@color/colorPrimary"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="@dimen/medium_padding"
        android:paddingStart="@dimen/medium_padding"
        android:textAllCaps="true"
        tools:text="yellow room"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:id="@+id/item_room_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:background="@color/greyDark"
        app:layout_constraintBottom_toTopOf="@id/item_room_line_v"
        app:layout_constraintTop_toBottomOf="@id/item_room_name_tv"
        android:id="@+id/item_room_meeting_v"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <ImageView
        android:visibility="invisible"
        android:backgroundTint="@color/blueDark"
        android:background="@drawable/round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/item_room_free_tv"
        app:layout_constraintTop_toBottomOf="@id/item_room_name_tv"
        android:layout_marginTop="@dimen/basic_padding"
        android:src="@drawable/ic_android"
        android:padding="8dp"
        android:tint="@android:color/white"
        android:id="@+id/item_room_free_icon_iv"
        android:layout_width="36dp"
        android:layout_height="36dp" />

    <TextView
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/item_room_meeting_v"
        android:layout_marginBottom="@dimen/large_padding"
        android:textColor="@android:color/white"
        android:layout_marginTop="@dimen/small_padding"
        app:layout_constraintEnd_toEndOf="@id/item_room_free_icon_iv"
        app:layout_constraintStart_toStartOf="@id/item_room_free_icon_iv"
        app:layout_constraintTop_toBottomOf="@id/item_room_free_icon_iv"
        android:text="@string/this_room_is_free_now"
        android:id="@+id/item_room_free_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        app:layout_constraintBottom_toTopOf="@id/item_room_meeting_time_start_tv"
        app:layout_constraintStart_toStartOf="@id/item_room_guideline_start"
        android:id="@+id/item_room_meeting_title_tv"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        tools:text="Interview with John Doe"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@id/item_room_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="@id/item_room_line_v"
        app:layout_constraintTop_toBottomOf="@id/item_room_meeting_title_tv"
        android:id="@+id/item_room_meeting_time_start_tv"
        tools:text="11:00"
        app:layout_constraintStart_toStartOf="@id/item_room_guideline_start"
        style="@style/ItemRoomMeetingTimeStyle" />

    <TextView
        app:layout_constraintStart_toEndOf="@id/item_room_meeting_time_start_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_room_meeting_time_start_tv"
        tools:text="AM"
        android:id="@+id/item_room_meeting_time_start_unit_tv"
        style="@style/ItemRoomMeetingTimeUnitStyle" />

    <View
        android:layout_marginStart="6dp"
        app:layout_constraintBottom_toBottomOf="@id/item_room_meeting_time_start_tv"
        app:layout_constraintTop_toTopOf="@id/item_room_meeting_time_start_tv"
        app:layout_constraintStart_toEndOf="@id/item_room_meeting_time_start_unit_tv"
        android:id="@+id/item_room_meeting_time_separator"
        android:background="@android:color/white"
        android:layout_width="6dp"
        android:layout_height="0.8dp" />

    <TextView
        style="@style/ItemRoomMeetingTimeStyle"
        tools:text="12:00"
        android:layout_marginStart="6dp"
        app:layout_constraintBaseline_toBaselineOf="@id/item_room_meeting_time_start_tv"
        app:layout_constraintStart_toEndOf="@id/item_room_meeting_time_separator"
        android:id="@+id/item_room_meeting_time_end_tv" />

    <TextView
        app:layout_constraintStart_toEndOf="@id/item_room_meeting_time_end_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_room_meeting_time_start_tv"
        tools:text="AM"
        android:id="@+id/item_room_meeting_time_end_unit_tv"
        style="@style/ItemRoomMeetingTimeUnitStyle" />

    <ImageView
        android:padding="10dp"
        android:src="@drawable/ic_android"
        app:layout_constraintEnd_toEndOf="@id/item_room_guideline_end"
        app:layout_constraintBottom_toBottomOf="@id/item_room_meeting_time_start_tv"
        app:layout_constraintTop_toTopOf="@id/item_room_meeting_title_tv"
        android:backgroundTint="@android:color/white"
        android:background="@drawable/round"
        android:layout_width="46dp"
        android:layout_height="46dp" />

    <View
        android:id="@+id/item_room_line_v"
        app:layout_constraintTop_toBottomOf="@id/item_room_meeting_v"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <View
        app:layout_constraintBottom_toTopOf="@id/item_room_status_desc_tv"
        app:layout_constraintTop_toBottomOf="@id/item_room_line_v"
        android:background="@color/greyDark"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <ImageView
        android:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/item_room_time_start_tv"
        app:layout_constraintTop_toTopOf="@id/item_room_time_start_tv"
        app:layout_constraintTop_toBottomOf="@id/item_room_line_v"
        android:id="@+id/item_room_arrow_icon_iv"
        android:src="@drawable/ic_arrow_forward"
        android:layout_width="16dp"
        app:layout_constraintStart_toStartOf="@id/item_room_guideline_start"
        android:layout_height="16dp" />

    <TextView
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/item_room_line_v"
        app:layout_constraintStart_toEndOf="@id/item_room_arrow_icon_iv"
        tools:text="1:00"
        android:layout_marginStart="@dimen/small_padding"
        android:id="@+id/item_room_time_start_tv"
        style="@style/ItemRoomNextMeetingTextStyle" />

    <TextView
        style="@style/ItemRoomTimeUnitStyle"
        android:layout_marginStart="@dimen/tiny_padding"
        android:textSize="9sp"
        tools:text="PM"
        app:layout_constraintTop_toTopOf="@id/item_room_time_start_tv"
        app:layout_constraintBaseline_toBaselineOf="@id/item_room_time_start_tv"
        app:layout_constraintStart_toEndOf="@id/item_room_time_start_tv"
        android:id="@+id/item_room_time_start_unit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginStart="6dp"
        app:layout_constraintBottom_toBottomOf="@id/item_room_time_start_tv"
        app:layout_constraintTop_toTopOf="@id/item_room_time_start_tv"
        app:layout_constraintStart_toEndOf="@id/item_room_time_start_unit_tv"
        android:id="@+id/item_room_time_range_icon_iv"
        android:background="@android:color/white"
        android:layout_width="4dp"
        android:layout_height="0.7dp" />

    <TextView
        style="@style/ItemRoomNextMeetingTextStyle"
        app:layout_constraintTop_toBottomOf="@id/item_room_line_v"
        android:layout_marginStart="6dp"
        app:layout_constraintStart_toEndOf="@id/item_room_time_range_icon_iv"
        android:id="@+id/item_room_time_end_tv"
        tools:text="2:00" />

    <TextView
        style="@style/ItemRoomTimeUnitStyle"
        android:layout_marginStart="@dimen/tiny_padding"
        app:layout_constraintStart_toEndOf="@id/item_room_time_end_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_room_time_end_tv"
        app:layout_constraintTop_toTopOf="@id/item_room_time_end_tv"
        android:textSize="9sp"
        android:textAllCaps="true"
        tools:text="PM"
        android:id="@+id/item_room_time_end_unit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/item_room_next_meeting_title_separator"
        app:layout_constraintBottom_toBottomOf="@id/item_room_time_start_tv"
        app:layout_constraintTop_toTopOf="@id/item_room_time_start_tv"
        android:layout_marginStart="@dimen/small_padding"
        app:layout_constraintStart_toEndOf="@id/item_room_time_end_unit_tv"
        android:background="@android:color/white"
        android:layout_width="0.7dp"
        android:layout_height="10dp" />

    <TextView
        android:layout_marginStart="@dimen/small_padding"
        app:layout_constraintStart_toEndOf="@id/item_room_next_meeting_title_separator"
        style="@style/ItemRoomNextMeetingTextStyle"
        tools:text="Design Standup"
        app:layout_constraintBaseline_toBaselineOf="@id/item_room_time_start_tv"
        android:id="@+id/item_room_next_meeting_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@id/item_room_status_desc_tv"
        app:layout_constraintTop_toTopOf="@id/item_room_status_desc_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <TextView
        app:layout_constraintStart_toStartOf="@id/item_room_guideline_start"
        app:layout_constraintTop_toTopOf="@id/item_room_status_desc_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_room_status_desc_tv"
        tools:text="occupied"
        android:id="@+id/item_room_status_tv"
        style="@style/ItemRoomStatus.Occuped" />

    <TextView
        android:textColor="@android:color/white"
        android:id="@+id/item_room_status_desc_tv"
        android:paddingBottom="@dimen/basic_padding"
        android:paddingTop="@dimen/basic_padding"
        app:layout_constraintTop_toBottomOf="@id/item_room_time_start_tv"
        android:layout_marginStart="6dp"
        app:layout_constraintStart_toEndOf="@id/item_room_status_tv"
        tools:text="for the next 15 minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        app:layout_constraintTop_toBottomOf="@id/item_room_status_desc_tv"
        tools:text="book for later"
        android:id="@+id/item_room_book_button"
        style="@style/ItemRoomButton.BookLater" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_room_guideline_start"
        app:layout_constraintGuide_begin="@dimen/medium_padding"
        android:orientation="vertical" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_room_guideline_end"
        app:layout_constraintGuide_end="@dimen/medium_padding"
        android:orientation="vertical" />

</androidx.constraintlayout.widget.ConstraintLayout>